<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202020">

    <!-- Tab Bar -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutLogs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#202020"
        app:tabIndicatorColor="#0078D4"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextColor="#808080"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabRippleColor="#1A0078D4">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logcat" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Errors" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040" />

    <!-- Cmdline Section (Collapsible) -->
    <LinearLayout
        android:id="@+id/layoutCmdlineHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@drawable/setting_row_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iconCmdlineExpand"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_down"
            app:tint="#808080"
            android:rotation="0"
            android:contentDescription="Expand/collapse" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Current Command Line"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iconCopyCmdline"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_copy"
            app:tint="#808080"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy command line" />

    </LinearLayout>

    <!-- Expandable Cmdline Content -->
    <LinearLayout
        android:id="@+id/layoutCmdlineContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        android:background="#202020">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/textCmdline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No command line available"
                android:textColor="#4EC9B0"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:background="#1A1A1A"
                android:padding="12dp"
                android:singleLine="true" />

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040" />

    <!-- Log Filter Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#202020">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="#404040"
            app:boxStrokeWidth="1dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLogFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Filter logs..."
                android:textColor="#FFFFFF"
                android:textColorHint="#808080"
                android:textSize="13sp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@android:color/transparent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkAutoScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textColor="#808080"
            android:textSize="12sp"
            android:checked="true"
            app:buttonTint="#0078D4"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Log Content Area -->
    <ScrollView
        android:id="@+id/scrollLogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:background="#1A1A1A"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading logs..."
            android:textColor="#D4D4D4"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:padding="12dp"
            android:textIsSelectable="true" />

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:background="#202020">

        <!-- Refresh Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRefresh"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:text="Refresh"
            android:textSize="13sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"
            app:strokeColor="#404040"
            app:strokeWidth="1dp"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="4dp"
            app:iconSize="18dp" />

        <!-- Copy Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCopyLogs"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:text="Copy"
            android:textSize="13sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"
            app:strokeColor="#404040"
            app:strokeWidth="1dp"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_copy"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            app:iconPadding="4dp"
            app:iconSize="18dp" />

        <!-- Clear Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonClearLogs"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Clear"
            android:textSize="13sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"
            app:strokeColor="#FF6B6B"
            app:strokeWidth="1dp"
            android:textColor="#FF6B6B"
            app:icon="@drawable/ic_delete"
            app:iconGravity="textStart"
            app:iconTint="#FF6B6B"
            app:iconPadding="4dp"
            app:iconSize="18dp" />

    </LinearLayout>

</LinearLayout>
