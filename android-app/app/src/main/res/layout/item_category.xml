<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#2D2D2D"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Protocol badge -->
        <TextView
            android:id="@+id/textProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/badge_background"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textAllCaps="true" />

        <!-- Category info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Category name -->
            <TextView
                android:id="@+id/textCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Hostlist file -->
            <TextView
                android:id="@+id/textHostlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#808080"
                android:textSize="11sp"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Strategy number -->
        <TextView
            android:id="@+id/textStrategy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/strategy_badge_background"
            android:textColor="#0078D4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <!-- Edit button -->
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#808080" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
