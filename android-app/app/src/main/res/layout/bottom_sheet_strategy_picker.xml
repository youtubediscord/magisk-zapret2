<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/sheetIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_video"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/sheetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Select Strategy"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Protocol Info -->
    <TextView
        android:id="@+id/sheetProtocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp"
        android:text="TCP 443"
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Filter Mode Toggle (hidden by default, shown when both hostlist and ipset available) -->
    <LinearLayout
        android:id="@+id/filterModeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingHorizontal="24dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Mode"
            android:textColor="#888888"
            android:textSize="12sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/segmented_control_background">

            <TextView
                android:id="@+id/btnFilterIpset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="IP Set"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/segmented_button_left_selected" />

            <TextView
                android:id="@+id/btnFilterHostlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hostlist"
                android:textColor="#888888"
                android:textSize="14sp"
                android:background="@drawable/segmented_button_right" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#404040"
        android:layout_marginHorizontal="24dp" />

    <!-- Strategy List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerStrategies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fadeScrollbars="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
