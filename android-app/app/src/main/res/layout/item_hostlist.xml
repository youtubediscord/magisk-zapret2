<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#2D2D2D"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#3D3D3D"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hostlist name row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Category icon -->
            <ImageView
                android:id="@+id/iconCategory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_hostlist"
                android:padding="4dp"
                android:background="@drawable/icon_circle_background"
                app:tint="#60CDFF" />

            <!-- Hostlist info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/textHostlistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="youtube.txt"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/textDomainCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,234 domains"
                    android:textColor="#808080"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- View content button -->
            <ImageView
                android:id="@+id/btnViewContent"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:src="@drawable/ic_chevron_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="View hostlist content"
                app:tint="#606060" />

        </LinearLayout>

        <!-- Strategy selector row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:background="@drawable/spinner_win11"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/strategySelector">

            <TextView
                android:id="@+id/textSelectedStrategy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="syndata_multisplit_tls_google_700"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingVertical="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_marginEnd="12dp"
                app:tint="#808080" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
